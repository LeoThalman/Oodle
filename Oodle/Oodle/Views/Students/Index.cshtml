        animation-name: animatetop;
        animation-duration: 0.4s;
    }



    .close {
        color: white;
        float: right;
        font-size: 0px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: #000;
            text-decoration: none;
            cursor: pointer;
        }

    .modal-header {
        padding: 2px 16px;
        background-color: #2B7A78;
        color: white;
    }

    .modal-body {
        padding: 2px 16px;
        color: black;
    }

    .modal-footer {
        padding: 2px 16px;
        background-color: #17252A;
        color: white;
    }
</style>

