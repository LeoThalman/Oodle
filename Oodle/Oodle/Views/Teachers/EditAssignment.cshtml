@model Oodle.Models.ViewModels.TeacherVM

@{
    ViewBag.Title = "EditAssignment";
}

<h2>Edit</h2>

<div>
    <form method="post" action="EditAssignmentAction">
        <div>
            <label for="name">Name</label>
            <input type="text" name="name" value="@Model.assignment.FirstOrDefault().Name" required/>


            <input type="hidden" name="assignmentID" value="@Model.assignment.FirstOrDefault().AssignmentID"/>

            <input type="hidden" name="classID" value="@Model.cl.ClassID" />
            <br />


            <label for="description">Description</label>
            <textarea name="description" required>@Model.assignment.FirstOrDefault().Description</textarea>

            <label for="startDate">Start Date</label>
            <input type="datetime" name="startDate" value="@Model.assignment.FirstOrDefault().StartDate" required/>

            <label for="dueDate">Due Date</label>
            <input type="datetime" name="dueDate" value="@Model.assignment.FirstOrDefault().DueDate" required/>

        </div>
        <div>
            <input type="submit" name="submit" value="Submit" />
        </div>
    </form>
</div>